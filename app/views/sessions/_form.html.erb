<%=form_for(@micropost) do |f| %>
  <% if @micropost.errors.present? %>
    <div class="alert alert-danger">
      <%= alert %>
      <ul>
        <% @micropost.errors.full_microposts.each do |full_micropost| %>
          <li>
            <%= full_micropost %>
          </li>
        <% end %>
      </ul>
    </div>
  <% end %>
<div class="form-group">
<label class="col-sm-2 control-label">名前</label>
<div class="col-sm-10">
<%= f.text_field :name, class: 'form-control' %>
</div>
</div>

<div class="form-group">
<label class="col-sm-2 control-label">プロフィール</label>
<div class="col-sm-10">
<%= f.text_area :profile, class: 'form-control' %>
</div>
</div>

<div class="form-group">
<label class="col-sm-2 control-label">メールアドレス</label>
<div class="col-sm-10">
<%= f.text_area :mailaddress, class: 'form-control' %> 
</div>
</div>

<div class="form-group">
<label class="col-sm-2 control-label">パスワード</label>
<div class="col-sm-10">
<%= f.text_area :password, class: 'form-control' %> 
</div>
</div>

<div class="form-group">
<label class="col-sm-2 control-label">地域</label>
<div class="col-sm-10">
<%= f.text_area :area, class: 'form-control' %> 
</div>
</div>
<br/>
<%= f.submit class: "btn btn-sm btn-primary" %>
<% end %>