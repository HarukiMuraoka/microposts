<h1>ログイン</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
      <%= form_for(:session, url: login_path) do |f| %>
      
        <%= f.label t "view.mail" %>
        <%= f.email_field :email, class: 'form-control' %>
        
        <%= f.label t "view.password" %>
        <%= f.password_field :password, class: 'form-control' %>
        
        <%= f.submit t('view.Log in'), class: "btn btn-primary" %>
      <% end %>  
      
      <p><%= link_to t('view.Sign up now!'), signup_path %></p>
  </div>
</div>
