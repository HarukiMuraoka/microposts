<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
  <div class="col-md-8">
      <h3>Followings</h3>
      <ol class="microposts">
        <% @user.following_users.each do |following| %>
          <li class="clearfix">
            <%= gravatar_for following %>
          <span class="user"><%= link_to following.name, following %></span>
          </li>
        <% end %>
      </ol>
  </div>
</div>